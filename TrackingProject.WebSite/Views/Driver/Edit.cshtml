@model TrackingProject.WebSite.Models.DriverViewModel

@{
    ViewBag.Title = "Sürücü Düzenleme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content-header">
    <h1>
        Tanımlamalar
        <small>Sürücü Düzenleme</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Home/Index"><i class="fa fa-dashboard"></i> Anasayfa</a></li>
        <li class="active">Sürücü Düzenleme</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Sürücü Düzenleme</h3>
                </div>

                <form id="Driver" role="form" action="/Driver/Edit" method="post">
                    @Html.HiddenFor(i=>i.Id)
                    <div class="box-body">
                        <div class="form-group">
                            <label for="InputName">Kodu</label>
                            @Html.TextBoxFor(m => m.Code, new { Class = "form-control", disabled = "false" })
                        </div>
                        <div class="form-group">
                            <label>Firmalar</label>
                            @Html.DropDownListFor(i => i.FirmId, Model.Firms, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Kullanıcı Adı</label>
                            @Html.TextBoxFor(m => m.Username, new { placeholder = "Kullanıcı Adı", Class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Şifre</label>
                            @Html.PasswordFor(m => m.Password, new { placeholder = "Şifre", Class = "form-control", maxLength = 20 })
                        </div>
                        <div class="form-group">
                            <label>Ad</label>
                            @Html.TextBoxFor(m => m.Name, new { placeholder = "Ad", Class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Soyad</label>
                            @Html.TextBoxFor(m => m.Surname, new { placeholder = "Soyad", Class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Cihaz Id</label>
                            @Html.TextBoxFor(m => m.DevinceId, new { placeholder = "CihazId", Class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Durumu</label>
                            <select id="Active" name="Active" class="form-control">
                                <option value="1" @(Model.Active == 1 ? "selected" : "")>Kullanımda</option>
                                <option value="0" @(Model.Active == 0 ? "selected" : "")>Kullanım Dışı</option>
                            </select>
                        </div>
                    </div>

                    <div class="box-footer">
                        <button id="btnSave" type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
@section scripts{
    <script>
        $(document).ready(function ($) {
            $('#Driver').formValidation({
                framework: "bootstrap4",
                button: {
                    selector: '#btnSave',
                    disabled: 'disabled'
                },
                locale: 'tr_TR',
                icon: null,
                fields: {
                    "Username": {
                        validators: {
                            notEmpty: {
                            }
                        }
                    },
                    //"Password": {
                    //    validators: {
                    //        notEmpty: {
                    //            //message: 'The password is required'
                    //        }, stringLength: {
                    //            max: 20
                    //        },
                    //    }
                    //},
                    "Name": {
                        validators: {
                            notEmpty: {
                            }
                        }
                    },
                    "Surname": {
                        validators: {
                            notEmpty: {
                            }

                        }
                    },
                },
                err: {
                    clazz: 'has-error'
                },
                row: {
                    invalid: 'has-error',
                    valid: 'has-success'
                }
            });

        });
    </script>
}



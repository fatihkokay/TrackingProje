@model TrackingProject.WebSite.Models.UserViewModel
@{
    ViewBag.Title = "Kullanıcı Düzenleme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section class="content-header">
    <h1>
        Kullanıcı Yönetimi
        <small>Kullanıcı Düzenleme</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Home/Index"><i class="fa fa-dashboard"></i> Anasayfa</a></li>
        <li class="active">Kullanıcı Düzenleme</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Kullanıcı Düzenleme</h3>
                </div>

                <form id="User" role="form" action="/User/Edit" method="post">
                    @Html.HiddenFor(i=>i.User.Id)
                    <div class="box-body">
                        <div class="form-group">
                            <label>Kullanıcı Adı</label>
                            @Html.TextBoxFor(m => m.User.Username, new { placeholder = "Kullanıcı Adı", Class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Şifre</label>
                            @Html.PasswordFor(m => m.User.Password, new { placeholder = "Şifre", Class = "form-control", maxLength = 20 })
                        </div>
                        <div class="form-group">
                            <label>Durumu</label>
                            <select id="User_Active" name="User.Active" class="form-control">
                                <option value="1" @(Model.User.Active == 1 ? "selected" : "")>Kullanımda</option>
                                <option value="0" @(Model.User.Active == 0 ? "selected" : "")>Kullanım Dışı</option>
                            </select>
                        </div>
                    </div>

                    <div class="box-footer">
                        <button id="btnSave" type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
@section scripts{
    <script>
        $(document).ready(function ($) {
                $('#User').formValidation({
                    framework: "bootstrap4",
                    button: {
                        selector: '#btnSave',
                        disabled: 'disabled'
                    },
                    locale:'tr_TR',
                    icon: null,
                    fields: {
                        "User.Username": {
                            validators: {
                                notEmpty: {
                                },
                                stringLength: {
                                    max: 30
                                },
                                regexp: {
                                    regexp: /^[a-zA-Z0-9]+$/
                                }
                            }
                        },

                        //"User.Password": {
                        //    validators: {
                        //        notEmpty: {
                        //            //message: 'The password is required'
                        //        },stringLength: {
                        //            max: 20
                        //        },
                        //    }
                        //},
                    },
                    err: {
                        clazz: 'has-error'
                    },
                    row: {
                        invalid: 'has-error',
                        valid:'has-success'
                    }
                });

        });
    </script>
}

